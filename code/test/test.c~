#include "syscall.h"

int main() {
  SynchPutString("Veuillez saisir un nombre : \n");
  int nombre = GetInt();
  SynchPutString("Nombre +10 = ");SynchPutInt(nombre+10);PutChar('\n');
  SynchPutString("Veuillez saisir une lettre : \n");
  char c = SynchGetChar();
  SynchPutString("Voici la lettre : ");
  PutChar(c);
  SynchPutString("\nVeuillez saisir une phrase (max = 100) : ");
  char buffer[100];
  SynchGetString(buffer,100);
  SynchPutString("\nVoici la phrase : ");
  SynchPutString(buffer);
  PutChar('\n');
  return 0;
}
